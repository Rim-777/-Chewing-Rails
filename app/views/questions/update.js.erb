<% if @question.errors.present? %>

<% @question.errors.full_messages.each do |message| %>
$('.question_errors').html('<%= j message %>');
<% end %>

<% else %>

$('.question_title_existed').html('<%= j @question.title   %>');
$('.question_body_existed').html('<%= j @question.body   %>');
toggleEditQuestion();

<% end %>
