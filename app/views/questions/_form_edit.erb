<div class="question_form_edit" id="question_edit_<%= question.id %>">


  <%= form_for (question), remote: true, html: {id: "question_form_edit_#{question.id}"} do |f| %>


      <div class="field">
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
      </div>
      <br/>

      <div class="field">
        <%= f.label :body %> <br/>
        <%= f.text_area :body %>
      </div>


      <div class="actions">
        <%= f.submit "#{question.new_record? ? 'Create' : 'Update'}" %>
      </div>
  <% end %>
</div>