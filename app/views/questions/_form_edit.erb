  <%= form_for question, remote: true, html: {id: "question_form_edit_#{question.id}"} do |f| %>


      <div class="field">
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
      </div>
      <br/>

      <div class="field">
        <%= f.label "body_edit_#{question.id}", 'question editing' %> <br/>
        <%= f.text_area :body, id: "question_body_edit_#{question.id}" %>
      </div>


      <div class="actions">
        <%= f.submit 'Save' %>
      </div>
  <% end %>
