<p><%= link_to 'Ask question', new_question_path %></p>

<div class="question_list">
  <% if @questions.any? %>

      <% @questions.each do |question| %>
          <p>
            <%= link_to "#{question.title}", question %>
            <% if user_signed_in? && current_user.author_of?(question) %>
                <%= link_to 'remove', question, class: 'remove_link',
                            method: :delete, data: {confirm: 'Хотите удалить вопрос?'} %>
            <% end %>
          </p>
      <% end %>
  <% end %>

</div>