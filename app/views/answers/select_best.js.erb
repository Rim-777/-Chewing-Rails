<% if @answer.errors.present? %>

<% @answer.errors.full_messages.each do |message| %>
$('#answer_errors').html('<%= j message %>');
<% end %>

<% else %>

var newBestAnswer = '<%= j render @answer %>';
var oldBestAnswer = $('.best_answer').html();
var oldBestAnswerLinkId = $('.best_answer .answer').data('answerId');


$('.best_answer').html(newBestAnswer);
$('.others_answers #answer_<%= @answer.id %>').remove();
if (oldBestAnswer) {$('.others_answers').append(oldBestAnswer)}
$('#answer_best_link_<%= @answer.id%>').hide();
$('#answer_best_link_' + oldBestAnswerLinkId).show();

<% end %>




