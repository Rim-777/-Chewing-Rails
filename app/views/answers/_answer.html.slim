div id="answer_#{answer.id}" class="answer" data-answer-id="#{ answer.id}"
  div class="answer_rating" id="answer_#{answer.id}_rating"
    == render 'opinions/opinion', opinionable: answer
  div class="answer_body_existed" id="answer_body_existed_#{ answer.id}"
    = answer.body
  == render 'answers/edit_form', answer: answer

  div class="answer_attachments"
    span>

    - answer.attachments.each do |a|
      = render 'attachments/attachment', attachment: a, attachable: answer

  span id="answer_crud_link_#{ answer.id}"
    = answer.user.email
    span>
    - if user_signed_in?
      - if current_user.author_of?(answer)
        = link_to 'edit', '', class: 'answer_edit_link', data: {answer_id: answer.id},
                  id: "answer_edit_link_#{answer.id}"
        span>
        = link_to 'delete', answer, class: 'remove_link', remote: true, method: :delete,
                  data: {confirm: 'Do you want to remove the answer'}

      - if current_user.author_of?(@question)
        span>
        = link_to 'best?', select_best_answer_path(answer), class: 'answer_best_link',
                  id: "answer_best_link_#{answer.id}", remote: true, method: :patch

