<%= form_for [question, answer] do |f| %>

    <div class="field">
      <%= f.label :title, 'topic' %> <br/>
      <%= f.text_field :title, value: @question.title %>
    </div> <br/>

    <div class="field">
      <%= f.label :body %> <br/>
      <%= f.text_area :body , placeholder: 'write answer'%>
    </div>



    <div class="actions">
      <%= f.submit  'Create' %>
    </div>
<% end %>