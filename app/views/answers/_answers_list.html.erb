<% if @question.answers && @question.answers.any? %>
    <h3>Answers:</h3>
    <% @question.answers.each do |answer| %>
        <% if answer.persisted? %>
            <table class="table">
              <tr>
                <%= answer.body %> <br/>
                <%= answer.user.email %>
                <%= render 'common/answer_user_sign_in', answer: answer %>
              </tr>
            </table>

        <% end %>
    <% end %>
<% else %>
    No answers

<% end %>
