<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
    $('.new_answer_errors').html('<%= j message %>');
    <% end %>

<% else %>
    var answer = $('#answer_<%= @answer.id %>')[0];
    <% publish_to "/question/#{@question.id}/answers" do %>
    $('.others_answers').append("<%= j render  @answer, show_links: false %>");
    <% end %>
    $('#answer_body_new').val('');
    while(true){
        if ($('#answer_<%= @answer.id %>')[0]!= undefined){
            $('#answer_crud_links_container_<%= @answer.id %>').html("<%= j render  'answer_crud_links', answer: @answer, question: @question  %>");
            break
        }
    }

<% end %>

