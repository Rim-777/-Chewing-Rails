    var answerId = '<%= @answer.id %>';
    var answer = $('#answer_'+ answerId);

<% if @answer.errors.present? %>

<% @answer.errors.full_messages.each do |message| %>
    $('#answer_' + answerId + '_errors').html('<%= j message %>');
