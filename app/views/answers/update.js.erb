<% if @answer.errors.present? %>

<% @answer.errors.full_messages.each do |message| %>
$('#answer_errors').html('<%= j message %>');
<% end %>

<% else %>
var answerId = '<%= @answer.id %>';
$('#answer_body_existed_' + answerId).html("<%= j @answer.body %>");
toggleEditAnswer(answerId, 200);
<% end %>

