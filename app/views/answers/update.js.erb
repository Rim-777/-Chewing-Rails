var answerId = '<%= @answer.id %>';
<% if @answer.errors.present? %>

<% @answer.errors.full_messages.each do |message| %>
$('#answer_' + answerId + '_errors').html('<%= j message %>');
<% end %>

<% else %>
$('#answer_body_existed_' + answerId).html("<%= j @answer.body %>");
toggleEditAnswer(answerId, 200);
<% end %>

